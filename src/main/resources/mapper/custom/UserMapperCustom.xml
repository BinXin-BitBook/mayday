<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sunshine.smile.mapper.custom.UserMapperCustom">
  <select id="getByNameAndPwd" parameterType="String" resultType="com.sunshine.smile.model.domain.User">
    select * from smile_user where  user_name=#{name} and user_pwd=#{pwd}
  </select>
  <select id="findUser" resultType="com.sunshine.smile.model.domain.User">
  select * from smile_user
  </select>
  <select id="findByUserIdAndUserPwd" resultType="com.sunshine.smile.model.domain.User">
  select * from smile_user where user_id = #{userId} and user_pwd = #{formerlyPwd}
  </select>
  
</mapper>